<div class="container pt-3">
<p id="notice"><%= notice %></p>
<div  style="float: left; with:70%">
  <h1>Discusses</h1>
</div>
<div style="with:30%; float: right; margin: 1% 8.3% 5px;">
  <button type="button" class="btn btn-primary" style="float: left">
    <span><%= link_to 'New Discuss', new_discuss_path, class: 'text-white'%></span>
  </button>
</div>


<table class="table">
  <thead class="thead-dark text-center">
    <tr>
      <th>User ID</th>
      <th>Content</th>
      <th></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @discusses.each do |discuss| %>
      <tr>
        <td class="text-center"><%= discuss.user.name %></td>
        <td class="text-center"><%= discuss.content %></td>
      
        
        <td class="text-right">
          <%= link_to discuss do %>
            <button type="button" class="btn btn-info"><i class="far fa-eye"></i></button>
          <% end %>
        </td>
        <td>
          <% if current_user != nil %>
              <%= link_to edit_discuss_path(discuss) do %>
                <button type="button" class="btn btn-secondary"><i class="far fa-edit"></i></button>
              <% end %>
                    
              <%= link_to discuss, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <button type="button" class="btn btn-danger"><i class="far fa-trash-alt"></i></button>
              <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
    
  </tbody>
</table>
<br>
</div>

