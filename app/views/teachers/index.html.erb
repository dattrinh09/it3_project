<div class="container pt-3">
<p id="notice"><%= notice %></p>
<div  style="float: left; with:70%">
  <h1>Teachers</h1>
</div>
<div style="with:30%; float: right; margin: 1% 8.3% 5px;">
  <button type="button" class="btn btn-primary" style="float: left">
    <span><%= link_to 'New Teacher', new_teacher_path, class: 'text-white'%></span>
  </button>
</div>

<table class="table text-center">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Email</th>
      <th>Subjects</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= link_to teacher.name, teacher, class: 'text-dark' %></td>
        <td><%= teacher.age %></td>
        <td><%= teacher.email %></td>
        <td><%= teacher.subject_code %></td>
        
        <td class="text-right">
          <%= link_to teacher do %>
            <button type="button" class="btn btn-info"><i class="far fa-eye"></i></button>
          <% end %>
        </td>
        
        <td>
            <% if current_user != nil %>
                <%= link_to edit_teacher_path(teacher) do%>
                    <button type="button" class="btn btn-secondary"><i class="far fa-edit"></i></button>
                <% end %>
                <%= link_to teacher, method: :delete, data: { confirm: 'Are you sure?' } do%>
                    <button type="button" class="btn btn-danger"><i class="far fa-trash-alt"></i></button>
                <% end %>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>