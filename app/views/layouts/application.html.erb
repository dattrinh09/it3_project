<!DOCTYPE html>
<html>
  <head>
    <title>Thefirstrails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg bg-custom navbar-expand-sm">
     <span class="navbar-brand"><i class="logo fas fa-feather"></i><%= link_to " Review Subjects", root_path %></span>
        <ul class="navbar-nav mr-auto text-white">
            <li class="nav-item text-white">
               <span class="nav-link text-white"><%= link_to "Subjects", subjects_path %></span>
            </li>
            <li class="nav-item">
               <span class="nav-link text-white"><%= link_to "Teachers", teachers_path %></span>
            </li>
        </ul>
        <% if user_signed_in? %>
        <span class="nav-link"><%= link_to "Log out",destroy_user_session_path, method: :delete  %></span>
            <%= link_to current_user.name  , users_show_path %></p>
        <% else %>
            <span class="nav-link"><%= link_to "Log in", new_user_session_path  %></span>
            <span class="nav-link"><%= link_to "Sign up", new_user_registration_path  %></span> 
        <% end %>
    </nav>
    <%= yield %>
  </body>
</html>